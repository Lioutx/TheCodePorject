@page
@model WebUI.Pages.Products.EditModel
@using Domain.Enums;
@{
    ViewData["Title"] = "Edit";
}

<h1>@Html.DisplayFor(model => model.Product.Name)</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product.Id" />
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" required="true" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.MeasurementValue" class="control-label"></label>
                <input asp-for="Product.MeasurementValue" class="form-control" required="true" />
                <span asp-validation-for="Product.MeasurementValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.MeasurementUnit" class="control-label"></label>
                <select asp-for="Product.MeasurementUnit" class="form-control" required="true">
                    <option value="@MeasurementUnit.g">grams</option>
                    <option value="@MeasurementUnit.ml">ml</option>
                    <option value="@MeasurementUnit.lt">litre</option>
                    <option value="@MeasurementUnit.pieces">Pieces/Slices</option>
                </select>
                <span asp-validation-for="Product.MeasurementUnit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.CookedToUncookedRatio" class="control-label"></label>
                <input asp-for="Product.CookedToUncookedRatio" class="form-control" />
                <span asp-validation-for="Product.CookedToUncookedRatio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.BuyAlways" class="control-label"></label>
                <input asp-for="Product.BuyAlways" />
                <span asp-validation-for="Product.BuyAlways" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>